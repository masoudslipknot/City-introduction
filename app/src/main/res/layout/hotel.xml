<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="150dip"
        android:layout_margin="2dip">
        <com.example.farazpcir.masoud.Custom_ViewFlipper
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/hotelvf"
            android:autoStart="true"
            android:flipInterval="3000"
            android:inAnimation="@android:anim/slide_in_left"
            android:outAnimation="@android:anim/slide_out_right">


        </com.example.farazpcir.masoud.Custom_ViewFlipper>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dip">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.25">
            <ImageView
                android:layout_width="160dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dip"
                android:src="@drawable/hotelbuilding"/>
            <TextView
                android:layout_width="120dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="45dip"
                android:text="مکان هتل ما"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/accent_material_light" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.25">
            <ImageView
                android:layout_width="160dip"
                android:layout_height="match_parent"
                android:src="@drawable/hotelequpment"
                android:layout_marginLeft="30dip" />
            <TextView
                android:layout_width="120dip"
                android:layout_height="match_parent"
                android:text="امکانات هتل ما"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginLeft="45dip"
                android:textColor="@color/accent_material_light" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.25">
            <ImageView
                android:layout_width="160dip"
                android:layout_height="match_parent"
                android:src="@drawable/hotelreservation"
                android:layout_marginLeft="30dip" />
            <TextView
                android:layout_width="120dip"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/accent_material_light"
                android:text="رزرو کردن"
                android:layout_marginLeft="45dip" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.25">
            <ImageView
                android:layout_width="160dip"
                android:layout_height="match_parent"
                android:src="@drawable/hotellocation"
                android:layout_marginLeft="30dip" />
            <TextView
                android:layout_width="120dip"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginLeft="45dip"
                android:text="هتل و نقشه مشهد"
                android:textColor="@color/accent_material_light" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>